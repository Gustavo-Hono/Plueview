generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Station {
  id          Int            @id @default(autoincrement())
  name        String
  macAddress  String         @unique
  readings    DataPlueView[]
  weatherData WeatherData[]
}

/// =========================
/// Leituras brutas
/// =========================
model DataPlueView {
  id                     Int      @id @default(autoincrement())
  time                   DateTime @default(now())
  battery                Int
  ConsumoPluviometro     Float?
  ConsumoVelocidadeVento Float?
  ConsumoDirecaoVento    Float?
  ConsumoTemperatura     Float?
  ConsumoUmidade         Float?
  stationId              Int
  station                Station  @relation(fields: [stationId], references: [id], onDelete: Cascade)

  @@index([time(sort: Desc)])
}

/// =========================
/// Dados meteorológicos
/// =========================
model WeatherData {
  umidade         Float
  temperatura     Float
  velocidadeVento Float?
  direcaoVento    WindDirection?
  quantidadeChuva Float
  dataMedicao     DateTime      @default(now())
  latitude        Float
  longitude       Float
  stationId       Int
  id              Int           @id @default(autoincrement())
  station         Station       @relation(fields: [stationId], references: [id], onDelete: Cascade)

  @@index([dataMedicao(sort: Desc)])
  @@map("weather_data")
}

/// =========================
/// Enum direção do vento
/// =========================
enum WindDirection {
  NORTE
  NORDESTE
  LESTE
  SUDESTE
  SUL
  SUDOESTE
  OESTE
  NOROESTE
}
